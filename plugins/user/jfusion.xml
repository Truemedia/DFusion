<?xml version="1.0" encoding="utf-8"?>
<install version="1.5" type="plugin" group="user">
	<name>User - Jfusion</name>
	<author>JFusion Development Team</author>
	<creationDate>July 2008</creationDate>
	<author>JFusion Development Team</author>
	<authorEmail>webmaster@jfusion.org</authorEmail>
	<authorUrl>http://www.jfusion.org</authorUrl>
	<copyright>Copyright (C) 2008 JFusion. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<version>1.0.7d</version>
	<description>
		This is the JFusion user plugin, that sets up the permissions of
		the user upon login. You MUST configure the JFusion
		component BEFORE you publish the JFusion authentication and user plugins
	</description>
	<files folder="plugins/user">
		<filename plugin="jfusion">jfusion.php</filename>
	</files>

		<languages folder="language/en-GB">
			<language tag="en-GB">en-GB.plg_user_jfusion.ini</language>
		</languages>

	<params>
		<param name="autoregister" type="radio" default="1"
			label="Auto Create Users" description="PARAMAUTOCREATEUSERS">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
	</params>
</install>

