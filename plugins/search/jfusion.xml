<?xml version="1.0" encoding="utf-8"?>
<install version="1.5" type="plugin" group="search" method="upgrade">
	<name>Search - Jfusion</name>
	<author>JFusion Development Team</author>
	<creationDate>December 2008</creationDate>
	<author>JFusion Development Team</author>
	<authorEmail>webmaster@jfusion.org</authorEmail>
	<authorUrl>http://www.jfusion.org</authorUrl>
	<copyright>Copyright (C) 2008 JFusion. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<version>1.1.0</version>
	<description>Search content of jFusion plugins.</description>
	<files folder="plugins/search">
		<filename plugin="jfusion">jfusion.php</filename>
	</files>
	
	<languages>
		 <language tag="en-GB">administrator/language/en-GB/en-GB.plg_search_jfusion.ini</language>
	</languages>
	
	<params addpath="/administrator/components/com_jfusion/elements">
		<param name="link_mode" type="list" default="direct" label="LINK_MODE" description="LINK_MODE_DESC">
			<option value="LINK_MODE_0">Display in wrapper</option>
			<option value="LINK_MODE_1">Display as direct link</option>
			<option value="LINK_MODE_2">Display directly inside Joomla</option>
		</param>
   		<param name=" " type="helptext" default="ITEMID_DESC"/>
		<param name="itemid" label="ITEMID" type="text" size="5" default="" description="ITEMID" />		
	</params>
</install>
