<?xml version="1.0" encoding="utf-8"?>
<install version="1.5" type="plugin" group="search" method="upgrade">
	<name>Search - JFusion</name>
	<author>JFusion Development Team</author>
	<creationDate>February 2009</creationDate>
	<author>JFusion Development Team</author>
	<authorEmail>webmaster@jfusion.org</authorEmail>
	<authorUrl>http://www.jfusion.org</authorUrl>
	<copyright>Copyright (C) 2009 JFusion. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<version>1.1.2-001</version>
	<description>Search content of JFusion plugins.</description>
	<files folder="plugins/search">
		<filename plugin="jfusion">jfusion.php</filename>
	</files>
	
	<languages folder="administrator/language/en-GB">
		<language tag="en-GB">en-GB.plg_search_jfusion.ini</language>
	</languages>
	
	<params addpath="/administrator/components/com_jfusion/elements">
		<param name="JFusionPluginParam" type="JFusionAdvancedParam" default=""
			label="JFUSION_PLUGIN" configfile="3" multiselect="true"
			description="JFUSION_PLUGIN_DESCR" />				
	</params>
</install>
