<?xml version="1.0" encoding="utf-8"?>
<install type="module" version="1.5">
	<name>JFusion Login Module</name>
	<author>JFusion Development Team</author>
	<authorEmail>info@jfusion.org</authorEmail>
	<authorUrl>http://www.jfusion.org</authorUrl>
	<copyright>(C) 2007 All rights reserved.</copyright>
	<license>GNU/GPL</license>
	<version>1.0.5f</version>
	<description>
		This is the optional JFusion login module. The only difference
		between this module and the standard Joomla module, is the
		forgot password and register URL links.
	</description>
	<files>
		<filename module="mod_jfusionlogin">
			mod_jfusionlogin.php
		</filename>
		<filename>index.html</filename>
		<filename>helper.php</filename>
		<filename>tmpl/default.php</filename>
		<filename>tmpl/index.html</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.mod_jfusionlogin.ini</language>
		<language tag="nb-NO">nb-NO.mod_jfusionlogin.ini</language>
	</languages>
	<params>
		<param name="pretext" type="textarea" cols="20" rows="5"
			default="" label="Pre-text" description="PARAMPRETEXT" />
		<param name="posttext" type="textarea" cols="20" rows="5"
			default="" label="Post-text" description="PARAMPOSTTEXT" />
		<param name="login" type="menuitem" default=""
			disable="separator" label="Login Redirection URL"
			description="PARAMLOGINREDIRECTURL" />
		<param name="logout" type="menuitem" default=""
			disable="separator" label="Logout Redirection URL"
			description="PARAMLOGOUTREDIRECTURL" />
		<param name="name" type="list" default="0"
			label="Name/Username">
			<option value="0">Username</option>
			<option value="1">Name</option>
		</param>
		<param name="usesecure" type="radio" default="0"
			label="Encrypt Login Form"
			description="Submit encrypted login data (requires SSL)">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="show_lostpass" type="radio" default="1"
			label="Lost password" description="PARAMLOSTPASSWORD">
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>
		<param name="show_lostusername" type="radio" default="1"
			label="Lost username" description="PARAMLOSTUSERNAME">
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>
		<param name="show_newaccount" type="radio" default="1"
			label="Create account" description="PARAMCREATEACCOUNT">
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>
		<param name="@spacer" type="spacer" default="" label=""
			description="" />
		<param name="greeting" type="radio" default="1" label="Greeting"
			description="Show/Hide the simple greeting text">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="avatar" type="radio" default="1"
			label="Avatar image" description="PARAMAVATARIMAGE">
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>
		<param name="pmcount" type="radio" default="1"
			label="Private message count"
			description="PARAMPRIVATEMESSAGECOUNT">
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>
		<param name="viewnewmessages" type="radio" default="1"
			label="New messages link" description="PARAMNEWMESSAGESLINK">
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>
	</params>
</install>
