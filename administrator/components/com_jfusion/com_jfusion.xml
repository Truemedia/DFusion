<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install SYSTEM "http://dev.joomla.org/xml/1.5/component-install.dtd">
<install type="component" version="1.5">
	<name>jfusion</name>
	<creationDate>October 2007</creationDate>
	<author>JFusion Development Team</author>
	<authorEmail>info@jfusion.org</authorEmail>
	<authorUrl>http://www.jfusion.org</authorUrl>
	<copyright>(C) 2007 All rights reserved.</copyright>
	<license>GNU/GPL</license>
	<version>1.0.7</version>
	<description>
		This is the JFusion component, used to configure the JFusion behaviour.
		Please ONLY install the JFusion user and authentication plugin after the JFusion component has been fully configured.
	</description>

    <params addpath="/administrator/components/com_jfusion/elements">
		<param name="JFusionPlugin" type="JFusionPlugins" default=""
			description="PLUGIN_PARAM" />

    </params>

	<install>
		<sql>
			<file driver="mysql" charset="utf8">sql/install.jfusion.sql</file>
		</sql>
	</install>

	<uninstall>
		<sql>
			<file driver="mysql" charset="utf8">sql/uninstall.jfusion.sql</file>
		</sql>
	</uninstall>

	<files folder="components/com_jfusion">
		<filename>index.html</filename>
		<filename>jfusion.php</filename>
		<filename>controllers/controller.jfusion.php</filename>
		<filename>controllers/index.html</filename>
        <folder>views</folder>
	</files>

	<administration>
		<menu img="components/com_jfusion/images/jfusion.png">
			jfusion
		</menu>
		<submenu>
			<menu img="components/com_jfusion/images/process.png" link="option=com_jfusion&amp;task=plugindisplay">
				Plugin Configuration
			</menu>
			<menu img="components/com_jfusion/images/add.png" link="option=com_jfusion&amp;task=pluginmanager">
				Plugin Manager
			</menu>
			<menu img="components/com_jfusion/images/user.png" link="option=com_jfusion&amp;task=usersync">
				User Synchronisation
			</menu>
			<menu img="components/com_jfusion/images/disconnect.png" link="option=com_jfusion&amp;task=loginchecker">
				Login Checker
			</menu>
			<menu img="components/com_jfusion/images/info.png" link="option=com_jfusion&amp;task=help">
				JFusion Help
			</menu>
		</submenu>

		<files folder="administrator/components/com_jfusion">
			<filename>index.html</filename>
			<filename>admin.jfusion.php</filename>

			<filename>controllers/controller.jfusion.php</filename>
			<filename>controllers/index.html</filename>

    		<folder>images</folder>
    		<folder>models</folder>
	    	<folder>views</folder>
		    <folder>elements</folder>
		    <folder>plugins</folder>
		    <folder>sql</folder>
		</files>

		<languages folder="administrator/language/en-GB">
			<language tag="en-GB">en-GB.com_jfusion.ini</language>
		</languages>
	</administration>
</install>
