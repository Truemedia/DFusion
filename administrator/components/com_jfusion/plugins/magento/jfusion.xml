<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install SYSTEM "http://dev.joomla.org/xml/1.5/component-install.dtd">
<install type="jfusion" version="1.5.0">
  <name>magento</name>
  <creationDate>8 December 2008</creationDate>
  <author>Henk Wevers</author>
  <authorEmail>admin@mijnbreincoach.nl</authorEmail>
  <authorUrl>www.mijnbreincoach.nl</authorUrl>
  <copyright>Copyright GPL (C) 2008 Open Source Matters. All rights reserved.</copyright>
  <license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<version>1.1.2</version>
  <description>JFusion (1.1.0+) plugin for Magento ecommerce 1.1</description>
  <slave>0</slave>
  <dual_login>0</dual_login>
  <activity>0</activity>
  <files>
		<filename>admin.php</filename>
		<filename>auth.php</filename>
		<filename>index.html</filename>
		<filename>jfusion.xml</filename>
		<filename>public.php</filename>
		<filename>user.php</filename>
  </files>
  <params addpath="/administrator/components/com_jfusion/elements">
    <param name="database_type" type="text" size="20" label="" default="mysql"
      description="DATABASE_TYPE" />
    <param name="database_host" type="text" size="20" label="" default=""
      description="DATABASE_HOST" />
    <param name="database_name" type="text" size="20" label="" default=""
      description="DATABASE_NAME" />
    <param name="database_user" type="text" size="20" label="" default=""
      description="DATABASE_USER" />
    <param name="database_password" type="text" size="20" label="" default=""
      description="DATABASE_PASSWORD" />
    <param name="database_prefix" type="text" size="20" label="" default=""
      description="DATABASE_PREFIX" />
    <param name="@spacer" type="spacer" default="" label=""
      description="" />
    <param name="source_url" type="text" size="100" label=""
      default="http://www.yourdomain.com/magento/" description="SOURCE_URL" />
    <param name="source_path" type="text" size="100" label=""
      default="" description="SOURCE_PATH" />
    <param name="@spacer" type="spacer" default="" label="" description="" />
  	<param name="cookie_domain" type="text" size="100" label="" default=""
    description="COOKIE_DOMAIN" />
  	<param name="cookie_path" type="text" size="100" label="" default=""
    description="COOKIE_PATH" />
  	<param name="cookie_expires" type="text" size="5" label="" default="1800"
    description="COOKIE_TIME" />
     <param name="secure" type="list" default="0" label="" description="COOKIE_SECURE">
      <option value="1">YES</option>
      <option value="0">NO</option>
    </param>
    <param name="httponly" type="list" default="0" label="" description="COOKIE_HTTPONLY">
      <option value="1">YES</option>
      <option value="0">NO</option>
    </param>
     <param name="override" type="text" size="100" label=""
      default="login[indirect]=no" description="CURL_COOKIE_OVERRIDE" />
    <param name="leavealone" type="text" size="100" label=""
      default="magento=>" description="CURL_COOKIE_LEAVEALONE" />
    <param name="integrationtype" type="text" size="3" label=""
      default="1" description="CURL_CURL_INTEGRATIONTYPE" />
    <param name="relpath" type="list" default="" label="" description="CURL_CURL_RELPATH">
      <option value="1">YES</option>
      <option value="">NO</option>
    </param>
    <param name="hidden" type="list" default="1" label="" description="CURL_CURL_HIDDEN">
      <option value="1">YES</option>
      <option value="">NO</option>
    </param>
    <param name="buttons" type="list" default="1" label="" description="CURL_CURL_BUTTONS">
      <option value="1">YES</option>
      <option value="">NO</option>
    </param>
    <param name="ssl_verifyhost" type="list" default="1" label="" description="CURL_VERIFYHOST">
      <option value="1">YES</option>
      <option value="0">NO</option>
    </param>
    <param name="@spacer" type="spacer" default="" label="" description="" />
    <param name="login_url" type="text" size="100" label=""
      default="index.php/customer/account/login/" description="CURL_LOGIN_URL" />
    <param name="loginform_id" type="text" size="100" label=""
      default="login-form" description="CURL_LOGINFORM_ID" />
     <param name="input_username_id" type="text" size="100" label=""
      default="" description="CURL_INPUT_USERNAME_ID" />
    <param name="input_password_id" type="text" size="100" label=""
      default="" description="CURL_INPUT_USERNAME_ID" />
    <param name="logout_url" type="text" size="100" label=""
      default="" description="CURL_LOGOUT_URL" />
    <param name="@spacer" type="spacer" default="" label="" description="" />
	<param name=" " type="helptext" default="DEFAULT_USERGROUP_DESCR"/>
    <param name="usergroup" type="JFusionUsergroups" description="DEFAULT_USERGROUP" label="DEFAULT_USERGROUP" />
    <param name="@spacer" type="spacer" default="" label="" description="" />
	<param name=" " type="helptext" default="AUTO_UPDATE_DESCR"/>
    <param name="update_activation" type="list" default="1" label="" description="UPDATE_ACTIVATION">
      <option value="1">YES</option>
      <option value="">NO</option>
    </param>
   </params>
</install>