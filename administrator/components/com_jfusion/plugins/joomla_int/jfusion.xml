<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install SYSTEM "http://dev.joomla.org/xml/1.5/component-install.dtd">
<install type="jfusion" version="1.5.0">
	<name>joomla</name>
	<author>JFusion Development Team</author>
	<creationDate>June 2008</creationDate>
	<copyright>Copyright (C) 2008 JFusion. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>webmaster@jfusion.org</authorEmail>
	<authorUrl>www.jfusion.org</authorUrl>
	<version>1.0.8-001</version>
	<description>internal Joomla plugin for JFusion</description>
	<files>
		<filename>auth.php</filename>
		<filename>index.html</filename>
		<filename>jfusion.xml</filename>
		<filename>jfusion_plugin.php</filename>
		<filename>user.php</filename>
	</files>
	<params addpath="/administrator/components/com_jfusion/elements">
		<param name="description" type="text" size="60" default="Current Joomla Site" description="DESCRIPTION"/>
		<param name="@spacer" type="spacer" default="" label=""	description="" />
		<param name=" " type="helptext" default="LOGIN_IDENTIFIER_DESCR"/>
		<param name="login_identifier" type="list" default="0" description="LOGIN_IDENTIFIER">
			<option value="1">USERNAME</option>
			<option value="2">EMAIL</option>
			<option value="3">USERNAME_OR_EMAIL</option>
		</param>
		<param name="@spacer" type="spacer" default="" label=""	description="" />
		<param name=" " type="helptext" default="USERNAME_FILTER_DESCR"/>
		<param name="username_filter" type="JFusionPlugins" default="" description="USERNAME_FILTER" />
		<param name="@spacer" type="spacer" default="" label=""	description="" />
		<param name=" " type="helptext" default="DEFAULT_USERGROUP_DESCR"/>
		<param name="usergroup" default="18" type="JFusionUsergroups" description="DEFAULT_USERGROUP" label="DEFAULT_USERGROUP" />
		<param name="@spacer" type="spacer" default="" label=""	description="" />
		<param name=" " type="helptext" default="AUTO_UPDATE_DESCR"/>
		<param name="update_activation" type="list" default="1" label="" description="UPDATE_ACTIVATION">
			<option value="1">YES</option>
			<option value="0">NO</option>
		</param>
		<param name="update_block" type="list" default="1" label="" description="UPDATE_BLOCK">
			<option value="1">YES</option>
			<option value="0">NO</option>
		</param>
		<param name="update_email" type="list" default="1" label="" description="UPDATE_EMAIL">
			<option value="1">YES</option>
			<option value="0">NO</option>
		</param>

		<param name="@spacer" type="spacer" default="" label=""	description="" />
		<param name="" type="helptext" default="JOOMLA_VISUAL_DEFAULT" />
		<param name="default_plugin" type="JFusionPlugins" default="" label="DEFAULT_JFUSION_PLUGIN"/>
		<param name="link_mode" type="list" default="direct" label="LINK_MODE">
			<option value="wrapper">LINK_MODE_0</option>
			<option value="direct">LINK_MODE_1</option>
			<option value="frameless">LINK_MODE_2</option>
		</param>
		<param name="wrapper_scroll" type="radio" default="auto"
			description="WRAPPER_SCROLL">
			<option value="no">NO</option>
			<option value="yes">YES</option>
			<option value="auto">AUTO</option>
		</param>
		<param name="wrapper_width" type="text" size="10" default="100%"
			description="WRAPPER_HEIGHT" />
		<param name="wrapper_height" type="text" size="10" default="500"
			description="WRAPPER_WIDTH" />
		<param name="wrapper_autoheight" type="radio" default="1"
			description="WRAPPER_AUTOHEIGHT">
			<option value="0">NO</option>
			<option value="1">YES</option>
		</param>
		<param name="wrapper_transparency" type="radio" default="1"
			description="WRAPPER_TRANSPARENCY">
			<option value="0">NO</option>
			<option value="1">YES</option>
		</param>

	</params>
</install>
